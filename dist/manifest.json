{
    "name": "Show User details",
    "version": "1.0.0",
    "short_name": "Show User details",
    "browser_action": {
        "default_popup" : "popup.html" 
    },
    "permissions": [
        "tabs",
        "https://facebook.com/*",
        "https://www.facebook.com/*",
        "storage",
        "webNavigation"
    ],
    "content_scripts": [{
        "matches": ["https://www.facebook.com/*"],
        "js" : ["jquery.min.js","content.js"]
    }],
    "background": {
        "page": "backgroundpage.html",
        
        "persistent": true
    },
    "manifest_version": 2
}